<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <TextView
        android:id="@+id/textview_debug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/for_debugging"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_camera" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@+id/textview_debug"
        android:visibility="gone"
        />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/book_Scrollview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/progressBar1" >
        <LinearLayout
            android:id="@+id/book_Linear_Layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/textview_debug"
            android:animateLayoutChanges="true"
            android:orientation="vertical">
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/imageview_camera_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/book_Scrollview"
        >
    </ImageView>

    <Button
        android:id="@+id/button_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/camera"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_speak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/speaker"
        app:layout_constraintLeft_toRightOf="@+id/button_camera"
        app:layout_constraintTop_toTopOf="@+id/button_camera"
    />

    <Button
        android:id="@+id/button_rest_api"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rest_api"
        app:layout_constraintLeft_toRightOf="@+id/button_speak"
        app:layout_constraintTop_toTopOf="@+id/button_speak"
    />

    <Button
        android:id="@+id/button_new_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_book"
        app:layout_constraintLeft_toRightOf="@+id/button_rest_api"
        app:layout_constraintTop_toTopOf="@+id/button_rest_api"
    />

</androidx.constraintlayout.widget.ConstraintLayout>